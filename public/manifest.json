{
  "manifest_version": 3,
  "name": "Nos2x Svelte - Remake",
  "version": "1.0",
  "description": "This is nos2x remake with svelte",
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "build/background.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "nativeMessaging"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*" 
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["build/content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "build/popup.js",
      "build/popup.css",
      "build/nostr-provider.js" ],
      "matches": [ "https://*/*" ]
    }
  ]
}
