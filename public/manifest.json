{
  "manifest_version": 2,
  "name": "Nos2x Svelte - Remake",
  "version": "1.0",
  "description": "This is nos2x remake with svelte",
  "browser_action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "build/background.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "nativeMessaging",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["build/content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "https://*/*",
    "build/popup.js",
    "build/popup.css",
    "build/nostr-provider.js"
  ]
}
